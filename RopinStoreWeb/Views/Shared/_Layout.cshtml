﻿@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Identity
@using RopinStore.Utility

@inject IHttpContextAccessor HttpContextAccessor
@inject SignInManager<IdentityUser> SignInManager


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ropin Store</title>
    <link rel="stylesheet" href="~/assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Inter:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800&amp;display=swap">
    <link rel="stylesheet" href="//cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="//cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/ToolKitMinV2_Custom.css" />


    <link rel="stylesheet" href="~/assets/fonts/simple-line-icons.min.css">
    <link rel="stylesheet" href="~/assets/css/baguetteBox.min.css">
    <link rel="stylesheet" href="~/assets/css/vanilla-zoom.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/semantic-ui@2.2.13/dist/semantic.min.css">

    <style>
        body {
            font-size: 16px !important;
        }

        h3 {
            font-size: 20px !important;
        }
        hr{
            margin: 0;
        }
        a {
            font-size: 16px !important;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md fixed-top navbar-shrink py-3 navbar-light" style="border-bottom-width: 0.5px; border-color:#ccc8c8; padding-bottom:22px !important;background-color: #f8f7f4" id="mainNav">
            <partial name="_NavBar" />
        </nav>

    </header>
    <div style="padding-top:100px; margin-bottom:100px; min-height:80%">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            <partial name="_Notification" />
            @RenderBody()
        </main>
    </div>
    <footer style="background-color: #f8f7f4; bottom:0; width:100%; margin-top:-70px; position:relative">
        <partial name="_Footer" />
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="//cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
    <script src="https://kit.fontawesome.com/0ca7e354a3.js" crossorigin="anonymous"></script>
    <script src="https://cdn.tiny.cloud/1/ou9smmm6529h6k9qp6rghzjhgcz63etf4ksojp5aflsnwewz/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>


    <script src="~/assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/assets/js/bold-and-bright.js"></script>
    <script src="~/assets/js/startup-modern.js"></script>
    <script src="~/assets/js/baguetteBox.min.js"></script>
    <script src="~/assets/js/vanilla-zoom.js"></script>
    <script src="~/assets/js/theme.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>