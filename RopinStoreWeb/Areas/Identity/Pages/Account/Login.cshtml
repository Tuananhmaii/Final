@page
@model LoginModel
<style>

</style>
<div class="row" style="padding-left:12%">
    <div class="col-md-4">
        <section class="py-4 py-md-5 my-5" style="padding-left: 35% !important">
            <div class="container py-md-5">
                <div class="row" style="width: 1066.6px;">
                    <div class="col-md-6 text-center" style="width: 540.3px;"><img class="img-fluid w-100" src="https://i.pinimg.com/236x/e6/12/f3/e612f3c25d8fa7600a6679d917da5f13.jpg" style="height: 611.05px;"></div>
                    <div class="col-md-4 col-xl-4 text-center text-md-start" style="width: 399.862px;margin-left: 3%;">
                        <h2 class="display-6 fw-bold mb-5"><label class="form-label">Welcome !</label></h2>
                        <form id="account" method="post" data-bs-theme="light">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="mb-3"><input class="shadow form-control" asp-for="Input.Email" autocomplete="username" aria-required="true" placeholder="Email" required style="border-radius: 5px;"></div>
                            <div class="mb-3"><input class="shadow form-control" asp-for="Input.Password" autocomplete="current-password" aria-required="true" placeholder="Password" required style="border-radius: 5px;"></div>
                            <div class="mb-5" style="display: flex;margin: 0px;width: 399.85px;margin-bottom: 5px;">
                                <div class="form-check" style="margin-right: 27px;margin-top: 30px;">
                                    <input class="form-check-input" type="checkbox" id="formCheck-1" asp-for="Input.RememberMe"><label class="form-check-label" for="formCheck-1" style="margin-right: 47px;padding-left: 0px;padding-right: 0px;">@Html.DisplayNameFor(m => m.Input.RememberMe)</label>
                                </div>
                                <a id="forgot-password" asp-page="./ForgotPassword" style="font-size: 12px !important;margin-right: 10px;padding-right: 0px;padding-left: 0px;margin-left: 52px;margin-bottom: 22px;">Forgot your password?</a>
                            </div>
                            <button class="btn btn-dark btn-sm shadow" type="submit" id="login-submit" style="width: 247.7125px;text-align: center;border-style: none;margin: 0px;color: var(--bs-btn-disabled-color);border-radius: 5px;height: 46px;padding-left: 0px;padding-right: 0px;margin-left: 65px;">Sign in</button>
                        </form>
                        <div>
                            <label class="form-label" style="font-size: 13px;margin-bottom: 20px;margin-top: 20px;">Don't have an account ? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Sign up</a></label>
                        </div>
                        <hr>
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <div>
                                <div>
                                    <p>
                                        @foreach (var provider in Model.ExternalLogins)
                                        {
                                            if (provider.Name == "Google")
                                            {

                                                <button class="btn btn-primary" type="submit" name="provider" value="@provider.Name" style="background: rgb(255,255,255);color: rgb(25,25,25);border-style: none;margin-left: 25%;margin-bottom: 4%; margin-top: 4%">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" viewBox="0 0 16 16" class="bi bi-google" style="padding-right: 0px;margin-right: 10px;margin-bottom: 4px;margin-top: 1px;font-size: 17px;">
                                                        <path d="M15.545 6.558a9.42 9.42 0 0 1 .139 1.626c0 2.434-.87 4.492-2.384 5.885h.002C11.978 15.292 10.158 16 8 16A8 8 0 1 1 8 0a7.689 7.689 0 0 1 5.352 2.082l-2.284 2.284A4.347 4.347 0 0 0 8 3.166c-2.087 0-3.86 1.408-4.492 3.304a4.792 4.792 0 0 0 0 3.063h.003c.635 1.893 2.405 3.301 4.492 3.301 1.078 0 2.004-.276 2.722-.764h-.003a3.702 3.702 0 0 0 1.599-2.431H8v-3.08h7.545z"></path>
                                                    </svg>Sign in with Google
                                                </button>
                                            }
                                            else
                                            {
                                                <button class="btn btn-primary" type="submit" name="provider" value="@provider.Name" style="background: rgb(255,255,255);color: rgb(25,25,25);border-style: none;margin-left: 25%;">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" viewBox="0 0 16 16" class="bi bi-facebook" style="padding-right: 0px;margin-right: 10px;margin-top: 1px;font-size: 18px;margin-bottom: 4px;">
                                                        <path d="M16 8.049c0-4.446-3.582-8.05-8-8.05C3.58 0-.002 3.603-.002 8.05c0 4.017 2.926 7.347 6.75 7.951v-5.625h-2.03V8.05H6.75V6.275c0-2.017 1.195-3.131 3.022-3.131.876 0 1.791.157 1.791.157v1.98h-1.009c-.993 0-1.303.621-1.303 1.258v1.51h2.218l-.354 2.326H9.25V16c3.824-.604 6.75-3.934 6.75-7.951z"></path>
                                                    </svg>Sign in with Facebook
                                                </button>
                                            }
                                        }
                                    </p>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

