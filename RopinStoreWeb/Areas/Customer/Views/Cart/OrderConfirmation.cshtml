@model int

<style>
    /* Centering the main container */
    .centered-container {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    /* Styling for the content */
    .content {
        text-align: center;
    }

</style>

<div class="centered-container">
    <div class="content">
        <h1 class="text-dark">Order Placed Successfully!</h1>
        Your Order Number is : @Model <br /><br />
        <img src="https://c0.wallpaperflare.com/preview/836/279/807/clothes-accessories-moda.jpg" />
        <div style="color:maroon">
            <br />
            Your order has been placed successfully! <br />
        </div>
        <button class="btn btn-primary" style="background: rgb(60,61,67); width:30%; border:none; margin-top: 3%" asp-area="Admin" asp-controller="Order" asp-action="Details" asp-route-orderId="@Model">See order details</button>
    </div>
    
</div>

