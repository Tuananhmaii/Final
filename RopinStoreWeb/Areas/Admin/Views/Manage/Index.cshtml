<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>

    var dt = new Date();
    GetReportList(dt.getFullYear());
    GetPayment();

    $('#ddlYear').on('change',function(){
        var year = $(this).val();

        GetReportList(year)
    });

    function GetReportList(year){
        $.get('/Admin/Manage/GetReportByYear?year=' + year, function (resp) {

            RegisterChartProduct(resp);

        });
    }


    function RegisterChartProduct(result){

        var resultLabel = [];
        var resultData = [];

        $.each(result, function(index, item){
            resultLabel.push(item.orderMonth);
            resultData.push(item.price);
        })

        const ctx = document.getElementById('myChart');
        Chart.getChart(ctx)?.destroy();

        new Chart(ctx, {
          type: 'line',
          data: {
            labels: resultLabel,
            datasets: [{
              label: 'Total income',
              data: resultData,
              borderWidth: 1
            }]
          },
          options: {
            scales: {
              y: {
                beginAtZero: true
              }
            }
          }
        });
    }


    function GetPayment() {
        $.get('/Admin/Manage/GetPaymentType', function (resp) {

            RegisterChartPayment(resp);

        });
    }

    function RegisterChartPayment(result) {

        var resultLabel = [];
        var resultData = [];

        $.each(result, function (index, item) {
            resultLabel.push(item.paymentType);
            resultData.push(item.paymentCount);
        })

        const ctx = document.getElementById('myChart2');

        new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: resultLabel,
                datasets: [{
                    label: 'Total income',
                    data: resultData,
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    }
</script>
